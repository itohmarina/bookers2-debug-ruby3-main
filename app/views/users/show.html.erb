<div>
  <%= flash[:notice] %>
</div>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>

<h2>投稿数の前日比・前週比</h2>
<table border="1" cellspacing="0">
  <tr>
    <th scope="col" width="200">今日の投稿数</th>
    <th scope="col" width="200">前日の投稿数</th>
    <th scope="col" width="100">前日比</th>
  </tr>
  <tr>
    <td>
      <%= @today_book.count %>
    </td>
    <td>
      <%= @yesterday_book.count %>
    </td>
    <td>
      <%= @today_book.count.to_i-@yesterday_book.count.to_i %>
    </td>
  </tr>
</table>
<table border="1" cellspacing="0" >
  <tr>
    <th scope="col" width="200">今週の投稿数</th>
    <th scope="col" width="200">前日の投稿数</th>
    <th scope="col" width="100">前週比</th>
  </tr>
  <tr>
    <td>
      <%= @this_week_book.count %>
    </td>
    <td>
      <%= @last_week_book.count %>
    </td>
    <td>
      <%=
    </td>
  </tr>
</table>