        <% if @book_comments.present? %>
          <% @book_comments.each do |a_comment| %>
          <p>
            <span><%= image_tag a_comment.user.get_profile_image, size:"100x100" %>
            <%= a_comment.user.name %></span>
            <span><%= a_comment.comment %></span>
            <% if a_comment.user==current_user %>
              <%= link_to 'Destroy', book_book_comment_path(@book, a_comment), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
            <% end %>
          </p>
          <% end %>
        <% end %>

